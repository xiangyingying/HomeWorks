.item{
  height: 120rpx;
  border-bottom: 1px solid #eee;
  padding: 10rpx 10rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.item-bg image{
  width: 120rpx;height: 120rpx;
}
.item-content{
  margin-left: 20rpx;
  color: #666666;
}
.name:hover,.artist:hover{
   text-decoration: underline;
}
.name{
  font-size: 37rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 400rpx;
}
.artist{
  font-size: 30rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 400rpx;
}
.count{
  color: #999999;
  font-size: 25rpx;
}
.count text{
  margin-right: 20rpx;
}
button{
  position: absolute;
  top:50rpx;right: 10rpx;
  font-size: 25rpx;
  height: 50rpx;line-height: 50rpx;
  border: 1px solid #666;
  border-radius: none;
  color: #999999;
  background: white;
}